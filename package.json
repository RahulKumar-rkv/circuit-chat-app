{
  "name": "circuit-chat-app",
  "productName": "Circuit Chat",
  "version": "1.0.0",
  "description": "Cicuit tray chat app written with Circuit JS SDK",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "dist": "build"
  },
  "build": {
    "appId": "com.unify.circuit-chat",
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "repository": "https://github.com/circuit/circuit-tray-app",
  "keywords": [
    "Circuit",
    "WebRTC",
    "electron",
    "SDK",
    "API",
    "chat"
  ],
  "author": "Roger Urscheler <roger.urscheler@unify.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "^1.8.1",
    "electron-builder": "^19.35.1"
  },
  "dependencies": {
    "auto-launch": "^5.0.1",
    "circuit-sdk": "^1.2.1900",
    "electron-oauth2": "git://github.com/rogeru/electron-oauth2.git#master",
    "electron-settings": "^3.1.3",
    "hyperhtml": "^1.12.2",
    "node-fetch": "^1.7.3",
    "opn": "^5.1.0",
    "request": "^2.83.0",
    "sharp": "^0.18.4"
  }
}
